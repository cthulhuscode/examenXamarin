<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="examen.AgregarProducto"
             >
    
    <ContentPage.ToolbarItems>
        <ToolbarItem Name="tbiGuardar" Order="Primary" Icon="save.png" Text="Guardar" Priority="0" Clicked="tbiGuardar_Clicked" />
    </ContentPage.ToolbarItems>
    
    <ContentPage.Content>
        <ScrollView>
            <StackLayout Margin="35,15,15,15">
                <Label Text="Nombre" FontSize="Medium" TextColor="Black"/>
                <Entry x:Name="nombre" Visual="Material"/>
                <Label Text="Precio de venta" FontSize="Medium" TextColor="Black"/>
                <Entry x:Name="preciodeventa" Keyboard="Numeric"/>
                <Label Text="Cantidad" FontSize="Medium" TextColor="Black"/>
                <Entry x:Name="cantidad" Keyboard="Numeric"/>
                <Label Text="Precio de costo" FontSize="Medium" TextColor="Black"/>
                <Entry x:Name="preciodecompra" Keyboard="Numeric" TextColor="Black"/>
                <Label Text="Descripcion:" FontSize="Medium"/>
                <Editor x:Name="descipcion" HeightRequest="150" TextColor="Black"/>
                <Label Text="Foto URL" FontSize="Medium" TextColor="Black"/>
                <Entry x:Name="foto"/>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>